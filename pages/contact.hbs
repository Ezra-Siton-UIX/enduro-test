{{>head}}
<!--plugins-->
{{>fancybox-css}}
</head>
<body itemscope itemtype="http://schema.org/ContactPage">
	{{#>body}}


	{{>inside_header}}




	<!-- Breadcrumb -->
	<div class="uk-container uk-container-large uk-margin-bottom">
		<ol itemscope itemtype="http://schema.org/BreadcrumbList" class="uk-breadcrumb uk-margin-small-top">
			<li itemprop="itemListElement" itemscope	itemtype="http://schema.org/ListItem">
				<a itemscope itemtype="http://schema.org/Thing" itemprop="item"  href="../{{global.language}}" data-uk-tooltip="pos: bottom" title="חזרה למסך הראשי">
					<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewbox="0 0 24 24">
						<g class="nc-icon-wrapper" fill="#999999">
							<path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"></path>
						</g>
					</svg>
					<span itemprop="name">{{global.home_label_name}}</span>
				</a>
				<meta itemprop="position" content="1" />
			</li>
			<li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
				<a itemscope itemtype="http://schema.org/Thing" itemprop="item" href="../{{global.language}}/contact">
					<span itemprop="name">
						{{seo.page_name}}
					</span>
				</a>
				<meta itemprop="position" content="2" />
			</li>
		</ol>
	</div>


	<main id="main" class="uk-section uk-section-default uk-section-l2arge" style="min-height: 85vh;">


		<div itemscope itemtype="http://schema.org/ProfessionalService" class="uk-container uk-container-large">
			<div class="uk-grid uk-grid-divider uk-grid-large uk-margin-large-bottom" data-uk-grid="" data-uk-scrollspy="target: > div; cls:uk-animation-slide-bottom-medium; delay: 50; offset-top:0; repeat: false">
				<div class="uk-width-expand@m uk-width-1-4@s">
					<img alt="עזרא סיטון - תמונת פרופיל" itemprop="image" class="uk-border-circle" src="/assets/img/ezra-siton-profile-image/ezra-siton-profile-image-small.jpg">
					<a href="/"><h2 itemprop="name" class="uk-text-bold uk-margin-small">
					<h2>
						{{global.company_name}}
					</h2>
				</a>
				<p itemprop="description" class="uk-margin-small uk-width-xlarge">
					{{global.footer.description}}
				</p>
			</div>

			<!-- local-bussiness info -->
			<div class="uk-width-expand@23m uk-width-3-4@s">
				<h2 class="uk-h3">
					{{call_to_action_heading}}
				</h2>

				<ul class="uk-list uk-list-divider">
					<li>
						<h4 class="uk-margin-small-bottom"><svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewbox="0 0 16 16" xml:space="preserve" width="13" height="13">
							<g class="nc-icon-wrapper" fill="#000000">
								<path fill="#000000" d="M8,0C4.1,0,1,3.1,1,7c0,1.9,0.7,3.7,2.1,5c0.1,0.1,4.1,3.7,4.2,3.8c0.4,0.3,1,0.3,1.3,0 c0.1-0.1,4.2-3.7,4.2-3.8c1.4-1.3,2.1-3.1,2.1-5C15,3.1,11.9,0,8,0z M8,9C6.9,9,6,8.1,6,7s0.9-2,2-2c1.1,0,2,0.9,2,2S9.1,9,8,9z"></path>
							</g>
						</svg>
						{{global.footer.contact_info.address.heading}}
					</h4>
					<address class="uk-margin-remove" itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
						<strong itemprop="name">{{global.footer.contact_info.address.name}}</strong> -
						<span itemprop="streetAddress">
							{{global.footer.contact_info.address.streetAddress}}
						</span>,
						<span itemprop="addressLocality">
							{{global.footer.contact_info.address.city}}
						</span>,
						<span itemprop="postalCode">
							{{global.footer.contact_info.address.postalCode}}
						</span>.
						<span itemscope itemtype="http://schema.org/Place">
							<a class="uk-link" title="הצג בגוגל מפות" itemprop="hasMap" href="{{global.footer.contact_info.address.googleMap_href}}" target="_blank">
								{{global.footer.contact_info.address.googleMap_btn_text}}
							</a>
						</span>
					</address>
					<div itemtype="http://schema.org/GeoCoordinates" itemscope="" itemprop="geo">
						<meta itemprop="latitude" content="{{global.footer.contact_info.address.latitude}}" />
						<meta itemprop="longitude" content="{{global.footer.contact_info.address.longitude}}" />
					</div>
				</li>
				<li>
					<h4 class="uk-margin-remove-top uk-margin-remove-bottom">
						<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 24 24" xml:space="preserve" width="13" height="13"><g class="nc-icon-wrapper" fill="#000000"><path fill="#000000" d="M12,0C5.383,0,0,5.383,0,12s5.383,12,12,12s12-5.383,12-12S18.617,0,12,0z M19,13h-8V5h2v6h6V13z"></path></g></svg>
						{{global.footer.contact_info.opening_hours.heading}}
					</h4>
					<p class="uk-margin-small">
						<span itemprop="openingHours" content="Mo,Tu,We,Th,Fr 09:00-18:00">
							{{global.footer.contact_info.opening_hours.hours}}
						</span>
					</p>
				</li>
				<li>
					<h4 class="uk-margin-small-bottom"><svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewbox="0 0 16 16" xml:space="preserve" width="13" height="13">
						<g class="nc-icon-wrapper" fill="#000000">
							<path fill="#000000" d="M15.285,12.305l-2.578-2.594c-0.39-0.393-1.025-0.393-1.416-0.002L9,12L4,7l2.294-2.294 c0.39-0.39,0.391-1.023,0.001-1.414l-2.58-2.584C3.324,0.317,2.691,0.317,2.3,0.708L0.004,3.003L0,3c0,7.18,5.82,13,13,13 l2.283-2.283C15.673,13.327,15.674,12.696,15.285,12.305z"></path>
							<path data-color="color-2" fill="#000000" d="M16,8h-2c0-3.309-2.691-6-6-6V0C12.411,0,16,3.589,16,8z"></path>
							<path data-color="color-2" fill="#000000" d="M12,8h-2c0-1.103-0.897-2-2-2V4C10.206,4,12,5.794,12,8z"></path>
						</g>
					</svg>
					{{global.footer.contact_info.phone.heading}}
				</h4>
				<a href="tel:	{{global.footer.contact_info.phone.number}}" class="uk-margin"><span itemprop="telephone">{{global.footer.contact_info.phone.number}}</span></a>
			</li>
			<li>
				<h4 class="uk-margin-small-bottom"><svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewbox="0 0 16 16" xml:space="preserve" width="13" height="13">
					<g class="nc-icon-wrapper" fill="#000000">
						<path data-color="color-2" fill="#000000" d="M15,1H1C0.4,1,0,1.4,0,2v1.4l8,4.5l8-4.4V2C16,1.4,15.6,1,15,1z"></path>
						<path fill="#000000" d="M7.5,9.9L0,5.7V14c0,0.6,0.4,1,1,1h14c0.6,0,1-0.4,1-1V5.7L8.5,9.9C8.22,10.04,7.78,10.04,7.5,9.9z"></path>
					</g>
				</svg>
				{{global.footer.contact_info.email.heading}}
			</h4>
			<!-- Target -->
			<a id="email" class="uk-display-inline-block" itemprop="email" href="mailto:{{global.footer.contact_info.email.address}}">{{global.footer.contact_info.email.address}}</a>
			<!-- Trigger -->
			<button id="email-copy-btn" class="uk-button uk-button-primary uk-button-small uk-margin-small-right uk-margin-small-left" data-clipboard-target="#email">
				{{global.footer.contact_info.email.copy_btn}}
			</button>
			<div>&nbsp;<span class="copied" style="color: black;">{{global.footer.contact_info.email.copied}}</span></div>
		</li>
	</ul>
</div>
</div>

</div>


</main>



<!-- footer -->
{{>footer}}
<!-- scripts -->
{{>uikit}}
{{>jquery}}
{{>fancybox}}

<!-- initialize -->
<script type="text/javascript">
document.addEventListener("DOMContentLoaded", function() {
	// Custom click event - open fancyBox manually
	// Choose what buttons to display by default
	$().fancybox({
		selector : '[data-fancybox="web-design-uix"]',
		thumbs   : true,
		hash     : true,
		infobar : true,
		arrows : true,
		buttons : [
			'thumbs',
			'close'
		],
		loop : true,
		transitionEffect  : "slide",
		thumbs : {
			autoStart : false
		},
		clickContent : function( current, event ) {
			return current.type === 'image' ? 'next' : false;
		},
	});


});
</script>

{{/body}}
